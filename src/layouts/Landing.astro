---
interface Props {
  frontmatter: {
    title: string;
    lowerImage: string;
  };
}

import Helmet from "../components/Helmet.astro";
import LandingImage from "../components/LandingImage.astro";
import LandingText from "../components/LandingText.astro";
import Line from "../components/Line.astro";
import Nav from "../components/Nav.astro";
import "../styles/global.scss";

const { frontmatter } = Astro.props;

const { title } = frontmatter;
---

<!doctype html>
<html lang="en" class="overscroll-none w-screen overflow-x-hidden">
  <Helmet title={title} />
  <body
    class="overscroll-none w-full h-screen lg:mb-0 grid grid-areas-mobile-landing lg:grid-areas-desktop-landing grid-cols-mobile-landing lg:grid-cols-desktop-landing lg:grid-rows-desktop-landing gap-8 overflow-x-hidden"
  >
    <Nav />
    <Line />
    <Line />
    <LandingText>
      <slot />
    </LandingText>
    <LandingImage />
  </body>
</html>
