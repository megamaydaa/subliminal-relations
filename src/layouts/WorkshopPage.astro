---
interface Props {
  frontmatter: {
    title: string;
    image: ImageMetadata;
    imageAlt?: string;
    eventDetails?: string[];
    date?: string;
    time?: string;
    location?: string;
  };
}

import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import Helmet from "../components/Helmet.astro";
import Nav from "../components/Nav.astro";
import Line from "../components/Line.astro";
import "../styles/global.scss";

const { frontmatter } = Astro.props;
const { title, image, imageAlt, eventDetails, date, time, location } = frontmatter;
---

<!doctype html>
<html lang="en" class="overscroll-none">
  <Helmet title={title} />
  <body
    class="w-screen h-screen gap-8 mb-[100px] grid grid-areas-mobile-workshop-page grid-cols-mobile-workshop-page grid-rows-mobile-workshop-page lg:grid-rows-desktop-workshop-page lg:grid-areas-desktop-workshop-page lg:grid-cols-desktop-workshop-page"
  >
    <Nav />
    <Line />
    <Line />
    <div class="grid-in-left-column hidden lg:flex flex-col gap-6 lg:px-0">
      <Image
        class="self-center justify-self-start w-full"
        src={image}
        alt={imageAlt || title}
      />
      <div class="text-[1.4625rem] space-y-0.5 leading-tight">
        {eventDetails ? (
          eventDetails.map((detail) => <div class="leading-tight">{detail}</div>)
        ) : (
          <>
            {date && <div><strong>Date:</strong> {date}</div>}
            {time && <div><strong>Time:</strong> {time}</div>}
            {location && <div><strong>Location:</strong> {location}</div>}
          </>
        )}
      </div>
    </div>
    <div class="lg:hidden workshop-content-mobile px-8">
      <Image
        class="self-center justify-self-start w-full mb-6"
        src={image}
        alt={imageAlt || title}
      />
      <div class="text-2xl sm:text-3xl space-y-1 leading-tight mb-6">
        {eventDetails ? (
          eventDetails.map((detail) => <div class="leading-tight">{detail}</div>)
        ) : (
          <>
            {date && <div><strong>Date:</strong> {date}</div>}
            {time && <div><strong>Time:</strong> {time}</div>}
            {location && <div><strong>Location:</strong> {location}</div>}
          </>
        )}
      </div>
    </div>
    <div class="workshop-content px-8 lg:px-0 lg:grid-in-right-column lg:-mt-[10px]">
      <div class="lg:max-w-screen-md lg:self-start w-full">
        <slot />
      </div>
    </div>
  </body>
</html>

<style>
  /* Event details styling for mobile */
  .workshop-content-mobile .text-2xl {
    font-size: 2rem !important;
  }
  
  @media (min-width: 640px) {
    .workshop-content-mobile .text-3xl {
      font-size: 2.25rem !important;
    }
  }
  
  /* Unified workshop content styles */
  .workshop-content {
    font-size: 2rem !important;
    line-height: 1.6;
    text-align: left;
  }
  
  /* Mobile styles */
  .workshop-content :global(h2) {
    font-size: 3.5rem;
    font-weight: 700;
    letter-spacing: 0.015em;
    margin-bottom: 1.25rem;
    margin-top: 2.5rem;
    line-height: 1.1;
  }
  
  .workshop-content :global(h2:first-child) {
    margin-top: 0;
  }
  
  .workshop-content :global(p) {
    margin-bottom: 1.25rem;
    padding-left: 0;
    line-height: 1.6;
    font-size: 2rem !important;
  }
  
  .workshop-content :global(ul) {
    list-style: none;
    margin-bottom: 1.25rem;
    padding-left: 0;
  }
  
  .workshop-content :global(li) {
    margin-bottom: 0.75rem;
    padding-left: 1.25rem;
    position: relative;
    font-size: 2rem !important;
    line-height: 1.6;
  }
  
  .workshop-content :global(li)::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
  }
  
  .workshop-content :global(strong) {
    font-weight: 700;
    font-size: 2.25rem;
  }
  
  /* Larger mobile screens */
  @media (min-width: 640px) {
    .workshop-content {
      font-size: 2.125rem !important;
    }
    .workshop-content :global(h2) {
      font-size: 3.75rem;
    }
    .workshop-content :global(p) {
      font-size: 2.125rem !important;
    }
    .workshop-content :global(li) {
      font-size: 2.125rem !important;
    }
    .workshop-content :global(strong) {
      font-size: 2.375rem;
    }
  }
  
  /* Desktop styles */
  @media (min-width: 1024px) {
    .workshop-content {
      font-size: 1.125rem !important;
      line-height: 1.7;
      display: flex;
      justify-content: flex-start;
      align-items: flex-start;
    }
    
    .workshop-content :global(h2) {
      font-size: 2.6rem;
      margin-bottom: 1rem;
      margin-top: 2rem;
      line-height: 1.25;
    }
    
    .workshop-content :global(h2:first-child) {
      margin-top: -0.25rem;
    }
    
    .workshop-content :global(p) {
      margin-bottom: 1.25rem;
      padding-left: 2rem;
      line-height: 1.7;
      font-size: 1.125rem !important;
    }
    
    .workshop-content :global(ul) {
      margin-bottom: 1.25rem;
      padding-left: 2rem;
    }
    
    .workshop-content :global(li) {
      margin-bottom: 0.625rem;
      padding-left: 1.25rem;
      font-size: 1.125rem !important;
    }
    
    .workshop-content :global(strong) {
      font-size: 1.625rem;
    }
    
    .workshop-content :global(p strong) {
      margin-left: -2rem;
      padding-left: 0;
    }
  }
  
  /* Override border styles for regular links */
  .workshop-content :global(a:not([href*='forms.gle']):not([href*='calendly']):not([href*='zoom.us'])) {
    font-weight: 700;
    border-bottom: 2px solid black;
    padding-bottom: 0.125rem;
  }
</style>
 